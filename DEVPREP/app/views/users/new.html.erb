
<div class="transparent-header">
  <ul id="login-header">
    <li><h2 class="login-logo">/DEVprep/</h2></li>
    <a href="/"><li  class="login-logo" id="special-signup">LOGIN</li></a>
  </ul>
</div>
<!-- Contact Section -->
<!-- Login Form Section -->
<div class="container">
      <div id="sign_up_form" class="row">
        <div class="col-lg-8 col-lg-offset-2 text-center">
          <div class="col-lg-12 text-center">
            <p id="log_in_slogan">SIGN-UP</p>
            <br></br>
            <%= form_for(@user, :html => { :id => "log_in_form" }) do |f| %>
                <%= f.text_field :first_name, class: "log_in_form_fields", :placeholder => "First name" %>
                <br></br>
                <%= f.text_field :last_name, class: "log_in_form_fields", :placeholder => "Last name" %>
                <br></br>
                <%= f.email_field :email, class: "log_in_form_fields", :placeholder => "Email" %>
                <br></br>
                <%= f.password_field :password, class: "log_in_form_fields", :placeholder => "Password" %>
                <br></br>
                <%= f.file_field :cover, class: "inputfile" %>
                <%= f.label :cover, "Upload Cover" %>
                <%= f.file_field :avatar, class: "inputfile", :placeholder => "Prof Pic" %>
                  <%= f.label :avatar, "Upload Cover" %>
                <br></br>
                <%= f.submit "Create", class: "log_in_btn_submit" %>
            <% end %>
          </div>
        </div>
      </div>
  </div>
<img align="middle" class="background-image" src="/assets/background.jpg">
